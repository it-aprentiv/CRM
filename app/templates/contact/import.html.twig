{% extends 'base.html.twig' %}

{% block title %}Importation - CRM Aprentiv v2.0{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home.index') }}"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item"><a href="{{ path('Liste_Client_Prospect_Controller') }}">Liste des clients / Prospects</a></li>
            <li class="breadcrumb-item active" aria-current="page">Importation</li>
        </ol>
    </nav>
   {# Make a form using ImportContactType #}
    
    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="card list-filter">
            {{ form_start(form) }}
                <div class="card-header text-center">
                    <h3 class="card-title">Importation des contacts</h3>
                </div>
                <div class="card-body">
                    {{ form_row(form.path) }}                  
                <div class="form-row">
                    <div class="form-group col-md-4">
                            {{ form_row(form.sexe) }}
                        </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.nomContact) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.prenomContact) }}
                    </div>
                </div>                        
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.telephone) }}
                    </div>
                </div>
                <div class="form-row">  
                    <div class="form-group col-md-4">
                        {{ form_row(form.adresse) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.codePostal) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(form.ville) }}
                    </div>
                </div>
                <div class="form-row">
                <div class="form-group col-md-6">
                        {{ form_row(form.nomSociete) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(form.noNaf) }}
                    </div>
                </div>
                      <div class="form-row">
                        <div class="form-group col-md-3">
                            {{ form_row(form.noSiret) }}
                        </div>
                        <div class="form-group col-md-3">
                            {{ form_row(form.typeSociete) }}
                        </div>
                        <div class="form-group col-md-3">
                            {{ form_row(form.secteurActivite) }}
                        </div>
                        <div class="form-group col-md-3">
                            {{ form_row(form.effectif) }}
                        </div>
                    </div>
                      <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.qualite) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_row(form.siteWeb)}}
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Importer</button>
                </div>
                {{ form_end(form) }}   

            </div>
        </div>
    </div>
    
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src=\"https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js\"></script>
{% endblock %}