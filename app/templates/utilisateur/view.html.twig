                {{ form_label(user_form.newPassword, 'Saisir nouveau mot de passe') }}
                {{ form_widget(user_form.newPassword) }}
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-info">Mettre Ã  jour</button>
            </div>
            {{ form_end(user_form) }}
