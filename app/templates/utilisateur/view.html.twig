        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home.index') }}"><i class="fas fa-home"></i></a></li>

            {% if app.user.droit == 'superadmin' %}
                <li class="breadcrumb-item active">
                    <a href="{{ path('welcome/Liste_utilisateur') }}">
                        Liste des utilisateurs
                    </a>
                </li>
            {% endif %}
